#!/bin/bash

# usages:
# ./install all
# ./install term
# ./install gui

termfiles='bashrc vimrc tmux.conf irbrc inputrc'
guifiles='i3 i3status.conf terminator vrapperrc'

if [ "$1" == 'all' ]; then
	files="$termfiles $guifiles"
elif [ "$1" == 'term' ]; then
	files="$termfiles"
elif [ "$1" == 'gui' ]; then
	files="$guifiles"
else
	echo 'Invalid parameter'
fi

here="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

olddir="$here/dotfiles-old"

for file in $files; do
	if [[ -d "$here/$file" ]]; then
		dest=~/.config/$file
	else
		dest=~/.$file
	fi
	if [[ -e "$dest" ]]; then
		mkdir -p "$olddir"
		rm -rf "$olddir/$file"
		mv "$dest" "$olddir/$file"
	fi
	ln -s "$here/$file" "$dest"
done
