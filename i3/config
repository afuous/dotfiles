# audio stuff from https://faq.i3wm.org/question/125/how-to-change-the-systems-volume/
# cannotchangevol prevents buttons on side of laptop from changing volume
set $setvolume pactl set-sink-volume 0
set $bigvol 10%
set $smallvol 2%
set $headphonesin [[ -z $(pactl list sinks | grep Headphones | grep 'not available') ]]
set $isabovemaxvolume [[ $(echo $(pactl list sinks | grep '^\s*Volume:' | sed -e 's/^.*\s\([0-9]\+\)%.*$/\1/')'<40' | bc) -eq 0 ]]
bindsym XF86AudioRaiseVolume exec [[ -f ~/.cannotchangevol ]] || $isabovemaxvolume && $headphonesin || $setvolume +$bigvol
bindsym XF86AudioLowerVolume exec [[ -f ~/.cannotchangevol ]] || $setvolume -$bigvol
bindsym $mod+XF86AudioRaiseVolume exec [[ -f ~/.cannotchangevol ]] || $isabovemaxvolume && $headphonesin || $setvolume +$smallvol
bindsym $mod+XF86AudioLowerVolume exec [[ -f ~/.cannotchangevol ]] || $setvolume -$smallvol
bindsym Shift+XF86AudioRaiseVolume exec $isabovemaxvolume && $headphonesin || $setvolume +$bigvol
bindsym Shift+XF86AudioLowerVolume exec $setvolume -$bigvol
bindsym $mod+Shift+XF86AudioRaiseVolume exec $isabovemaxvolume && $headphonesin || $setvolume +$smallvol
bindsym $mod+Shift+XF86AudioLowerVolume exec $setvolume -$smallvol
bindsym XF86AudioMute exec [[ -f ~/.cannotmute ]] || amixer -q set Master toggle
bindsym Shift+XF86AudioMute exec [[ -f ~/.cannotchangevol ]] && rm ~/.cannotchangevol || touch ~/.cannotchangevol
bindsym $mod+Shift+XF86AudioMute exec [[ -f ~/.cannotmute ]] && rm ~/.cannotmute ~/.cannotchangevol || touch ~/.cannotmute ~/.cannotchangevol

# toggle microphone mute
bindsym $mod+b exec "amixer set Capture toggle"

# screenshots with xclip and scrot
# https://faq.i3wm.org/question/6659/bindsym-for-screenshot-partially-not-working/
bindsym Print exec "scrot"
bindsym --release Control+Print exec "scrot --select &"
bindsym Shift+Print exec "scrot ~/TEMP_scrn.png && xclip -sel clip -t image/png TEMP_scrn.png && rm TEMP_scrn.png"
bindsym --release Control+Shift+Print exec "scrot --select ~/TEMP_scrn.png && xclip -sel clip -t image/png TEMP_scrn.png && rm TEMP_scrn.png"

# set solid black desktop background
exec --no-startup-id xsetroot -solid '#000000'

# put spotify back in 3 for if it is restarted
for_window [class="Spotify"] move container to workspace 3

# open floating terminal
bindsym Control+Mod1+z exec "terminator -T Floating_Terminator --geometry=893x596; sleep 4; wmctrl -r Floating_Terminator -T Terminator"
for_window [class="Terminator" title="Floating_Terminator"] floating enable

# switch to previous workspace
# https://www.reddit.com/r/i3wm/comments/3o2bdn/i3_how_to_quickly_switch_between_current_and/cvtgpiy/
bindsym $mod+grave workspace back_and_forth
bindsym $mod+o workspace back_and_forth

bindsym $mod+n workspace prev
bindsym $mod+m workspace next
bindsym $mod+w workspace prev
bindsym $mod+e workspace next

# make caps lock act like control and escape
# both shifts at the same time toggle caps lock
exec_always --no-startup-id "\
	setxkbmap -layout us ;\
	setxkbmap -option ;\
	setxkbmap -option caps:ctrl_modifier ;\
	setxkbmap -option shift:both_capslock ;\
"
# requires xcape
exec_always --no-startup-id "killall xcape; xcape -e 'Caps_Lock=Escape'"

# make tapping the trackpad not count as clicking
exec_always --no-startup-id "synclient MaxTapTime=0"

# requires networkmanager, nm-applet
exec_always --no-startup-id "killall nm-applet; nm-applet"

# copy lyrics link for spotify song
# requires spotify-now
bindsym $mod+Shift+a exec "~/dotfiles/bin/lyrics.sh | xclip -sel clip"

# previous, next, and play/pause keys
# requires playerctl
# https://faq.i3wm.org/question/3747/enabling-multimedia-keys.1.html
exec_always --no-startup-id ~/dotfiles/bin/check-music.sh
bindsym XF86AudioPlay exec "$isabovemaxvolume && $headphonesin && { mocp -P; playerctl pause; } || if [[ -f ~/.currentmusicspotify ]]; then playerctl play-pause; elif [[ -f ~/.currentmusicmoc ]]; then mocp -G; fi"
bindsym $mod+g exec "$isabovemaxvolume && $headphonesin && { mocp -P; playerctl pause; } || if [[ -f ~/.currentmusicspotify ]]; then playerctl play-pause; elif [[ -f ~/.currentmusicmoc ]]; then mocp -G; fi"
bindsym XF86AudioPrev exec "$isabovemaxvolume && $headphonesin || if [[ -f ~/.currentmusicspotify ]]; then playerctl previous; elif [[ -f ~/.currentmusicmoc ]]; then mocp -r; fi"
bindsym XF86AudioNext exec "$isabovemaxvolume && $headphonesin || if [[ -f ~/.currentmusicspotify ]]; then playerctl next; elif [[ -f ~/.currentmusicmoc ]]; then mocp -f; fi"

# adjust screen brightness
# https://www.reddit.com/r/linux/comments/268wcy/managing_brightness_on_i3wm/
# requires light
bindsym XF86MonBrightnessDown exec "if [[ $(echo $(light -G)'<5' | bc) -eq 0 ]]; then light -U 5; fi"
bindsym XF86MonBrightnessUp exec light -A 5
bindsym $mod+Shift+XF86MonBrightnessDown exec light -U 100

bindsym Control+$mod+x exec --no-startup-id "google-chrome-stable --incognito"

